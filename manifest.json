{
  "manifest_version": 3,
  "name": "Shortwave AI Helper",
  "version": "0.1",
  "description": "Get help, save time, have fun.",
  "host_permissions": ["https://app.shortwave.com/*"],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "matches": [
        "https://app.shortwave.com/*"
      ]
    }
  ]
}